---
interface Props {
  name: string;
  description: string;
  image: string;
  href: string;
  variant?: 'nottingham' | 'mansfield' | 'chesterfield' | 'derby';
}

const { name, description, image, href, variant = 'nottingham' } = Astro.props;
---

<a href={href} class={`location-card ${variant}`} data-aos="fade-up">
  <div class="location-image">
    <img src={image} alt={name} loading="lazy" />
  </div>
  <h3>{name}</h3>
  <p>{description}</p>
</a>

<style>
  .location-card {
    display: block;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--card-radius);
    padding: 2rem;
    text-align: center;
    transition: all 0.4s var(--transition-smooth);
    position: relative;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .location-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--lime);
    transform: scaleX(0);
    transition: transform 0.4s var(--transition-smooth);
  }

  .location-card.mansfield::before {
    background: var(--lilac);
  }

  .location-card.chesterfield::before,
  .location-card.derby::before {
    background: var(--grey);
  }

  .location-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-glow);
  }

  .location-card:hover::before {
    transform: scaleX(1);
  }

  .location-image {
    width: 100%;
    height: 150px;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .location-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s var(--transition-smooth);
  }

  .location-card:hover .location-image img {
    transform: scale(1.05);
  }

  .location-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .location-card p {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }
</style>
