---
interface Props {
  initialEventCount?: number;
}

const { initialEventCount = 0 } = Astro.props;
---

<section class="stats-section" id="about">
  <div class="stats-grid">
    <div class="stat-item" data-aos="fade-up" data-aos-delay="0">
      <div class="stat-number" id="stat-events">{initialEventCount || '-'}</div>
      <div class="stat-label">Upcoming Events</div>
    </div>
    <div class="stat-item" data-aos="fade-up" data-aos-delay="100">
      <div class="stat-number lilac" id="stat-members">-</div>
      <div class="stat-label">Community Members</div>
    </div>
    <div class="stat-item" data-aos="fade-up" data-aos-delay="200">
      <div class="stat-number">4</div>
      <div class="stat-label">Locations</div>
    </div>
    <div class="stat-item" data-aos="fade-up" data-aos-delay="300">
      <div class="stat-number lilac" id="stat-speakers">-</div>
      <div class="stat-label">Speakers</div>
    </div>
  </div>
</section>

<script>
  // Fetch live stats from API
  async function loadStats() {
    try {
      const response = await fetch('https://api.notluck.co.uk/collective/stats');
      if (response.ok) {
        const stats = await response.json();
        const membersEl = document.getElementById('stat-members');
        const speakersEl = document.getElementById('stat-speakers');

        if (membersEl && stats.members) {
          membersEl.textContent = stats.members.toString();
        }
        if (speakersEl && stats.speakers) {
          speakersEl.textContent = stats.speakers.toString();
        }
      }
    } catch (error) {
      console.error('Error fetching stats:', error);
    }
  }

  // Load stats when DOM is ready
  document.addEventListener('DOMContentLoaded', loadStats);
</script>

<style>
  .stats-section {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
    padding: 6rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    text-align: center;
  }

  .stat-item {
    opacity: 0;
    transform: translateY(20px);
  }

  .stat-item[data-aos] {
    opacity: 0;
  }

  :global(.aos-animate) .stat-item,
  .stat-item:global(.aos-animate) {
    opacity: 1;
    transform: translateY(0);
    transition: all 0.6s var(--transition-smooth);
  }

  .stat-number {
    font-size: 4rem;
    font-weight: 800;
    color: var(--lime);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-number.lilac {
    color: var(--lilac);
  }

  .stat-label {
    color: var(--text-secondary);
    font-size: 1rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .stats-section {
      padding: 4rem 1.5rem;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .stat-number {
      font-size: 3rem;
    }
  }
</style>
